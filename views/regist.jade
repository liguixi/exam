extends layout
      
block content
  div#regist-wrapper
    h1 
      center 用户注册
    div#regist
      p 
        div(style='width:72px;') 用户名
        input(type='text', name='username', id='userName')
      p 
        div(style='width:72px;') 密码
        input(type='password', name='password', id="passwd")
      p 
        div(style='width:72px;') 确认密码
        input(type='password', name='password')
      p 
        div(style='width:72px;') 邮箱
        input(type='text', name='email')

      div.content
        a(id='regist-btn',title='点击注册',class='btn') 注册
        a(href='/login',title='登录',style="margin-left:120px;",class='btn') 登录
  script(type='text/javascript')
    $(document).ready(function(){
      $('a#regist-btn').click(function(){
        var userName = $('#userName')
        if ($.trim(userName.val()) == '') {
          alert('用户名不能为空.')
        }
      })
    })